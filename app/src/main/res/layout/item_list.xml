<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemlist_cv"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="260dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movieimg_iv"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="170dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginStart="180dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:layout_weight="7">
        <TextView
            android:id="@+id/movietitle_tv"
            android:text="Movie Title"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/img_str"
            android:src="@drawable/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            />
<!--            android:layout_below="@+id/movietitle_tv"-->


        <TextView
            android:id="@+id/itemlist_tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="152dp"
            android:text="10.0"/>
<!--            android:layout_toRightOf="@id/img_str"-->
<!--            android:gravity="center_vertical"/>-->
    </RelativeLayout>


</androidx.cardview.widget.CardView>

